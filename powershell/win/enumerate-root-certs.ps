
enumerate certs

Get-ChildItem -Path Cert:\LocalMachine\Root | ForEach-Object {
    [PSCustomObject]@{
        # Subject        = $_.Subject
        # Issuer         = $_.Issuer
        FriendlyName   = $_.FriendlyName
        #Thumbprint     = $_.Thumbprint
        NotBefore      = $_.NotBefore
        #NotAfter       = $_.NotAfter
        # SerialNumber   = $_.SerialNumber
        #SignatureAlgo  = $_.SignatureAlgorithm.FriendlyName
        # PublicKeyAlgo  = $_.PublicKey.KeyExchangeAlgorithm
    }
}


Get-ChildItem -Path Cert:\LocalMachine\Root | ForEach-Object {
    if ($_.Subject -match "CN=([^,]+)") {
        [PSCustomObject]@{
            CN        = $matches[1]
            NotBefore = $_.NotBefore
        }
    }
}


set friendly name

$cert = Get-ChildItem -Path Cert:\LocalMachine\Root | Where-Object { $_.Subject -like "*YourCertSubject*" }
$cert.FriendlyName = "My Custom Label"




add cert ( admin )

$certPath = "C:\path\to\your\certificate.cer"
Import-Certificate -FilePath $certPath -CertStoreLocation "Cert:\LocalMachine\Root"

